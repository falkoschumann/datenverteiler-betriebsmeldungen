<!-- action types: add, fix, update, remove -->

<document xmlns="http://maven.apache.org/changes/1.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/changes/1.0.0 http://maven.apache.org/xsd/changes-1.0.0.xsd">

    <properties>
        <title>Funktionsbibliothek Betriebsmeldungen</title>
        <author email="falko.schumann@muspellheim.de">Falko Schumann</author>
    </properties>

    <body>
        <release version="1.0.1" date="2015-11-23" description="Bugfixes">
            <action dev="falkoschumann" type="fix" issue="1">
        Die Methode BetriebsmeldungFabrik::toString() liefert jetzt die
    Betriebsmeldung die erstellt wird zurück.
            </action>
            <action dev="falkoschumann" type="fix" issue="2">
        Der Urlasser einer Betriebsmeldung hat jetzt ein Nullobjekt als
    Defaultwert, womit Benutzer, Ursache und Veranlasser jetzt mit Defaultwerten
    belegt werden.
            </action>
        </release>

        <release version="1.0.0" date="2015-11-18" description="Erste Veröffentlichung">
            <action dev="falkoschumann" type="add">
        Senden von Betriebsmeldungen mit Hilfe einer Schnittstelle und einer
    Fabrik für Betriebsmeldungen.
            </action>
        </release>
    </body>

</document>
